
@import url('https://combinatronics.com/kiwicopple/quick-font/master/css/circular.css');

#app
  min-height: 100vh
  background: #ffffff8
  font-family: "Circular", BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif
    
  .content__default
    max-width: 740px
    margin: 40px auto
    padding: 2rem 2.5rem

  h1, h2, h3
    font-family: "Circular", BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif

  h2 
    margin-top: 80px

  img
    border-radius: 5px
    border: 1px solid #eee
  
  code
    background: rgb(40, 44, 52)
    color: #ffffff
    border-radius: 3px
    padding: 3px 5px

  pre
    code
      padding:0px